<div class="user-page-container">
    <div class="avatar">
		<%= image_tag "http://github.com/#{current_user.nickname}.png" %>
    </div>
    <div class="username">
    	<h3 class="text-center">
			<%= @user.nickname %>
		</h3>
    </div>
    <div class="signout-button">
  		<%= button_to "Sign out", destroy_user_session_path, method: :delete %>
    </div>
</div>